<h1 class="text-center mb-3">{{title}}</h1>
<form action="/api/expenses" method="POST" class="mb-4">
    <div class = "form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control">
    </div>
    <div class = "form-group">
        <label for="cost">Cost</label>
        <input type="number" name="cost" class="form-control">
    </div>
    <input type="submit" value="Add Expense" class="btn btn-primary btn-block">
    
</form>

<h4>Expenses</h4>
<ul class="list-group">
    {{#each expenses}}
    <li class="list-group-item">{{this.name}}: {{this.cost}}</li>
    {{/each}}
</ul>

<a href="/api/expenses" class="btn btn-light mt-4">Visit API</a>

